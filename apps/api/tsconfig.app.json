{
  "extends": "./tsconfig.json",
  "composite": true,
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "baseUrl": "./",
    "paths": {
      "@env": ["./src/environment"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
